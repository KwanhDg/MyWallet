{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/frontend/secure-index.html"
    },
    {
      "source": "/secure",
      "destination": "/frontend/secure-index.html"
    },
    {
      "source": "/standard",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/demo",
      "destination": "/frontend/crypto-demo.html"
    },
    {
      "source": "/js/(.*)",
      "destination": "/frontend/js/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/secure-index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        }
      ]
    }
  ]
}