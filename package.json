{
  "name": "personal-crypto-wallet",
  "version": "1.0.0",
  "description": "Personal Crypto Wallet with Hardhat and React",
  "scripts": {
    "chain": "cd backend && npx hardhat node",
    "deploy": "cd backend && npx hardhat run scripts/deploy.js --network localhost",
    "backend": "cd backend && node src/server.js",
    "frontend": "cd frontend && npm run dev",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "compile": "cd backend && npx hardhat compile",
    "test": "cd backend && npx hardhat test"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "type": "commonjs"
}
